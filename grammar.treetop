# vim: ft=treetop
grammar RbLisp
  rule program
    expression more_expressions:("\n" space expression)* <Program>
  end

  rule expression
    space? '(' body ')' space? <Expression>
  end

  rule body
    (expression / define / add / literal / space )* <Body>
  end

  rule define
    "define" space? identifier space? integer <Define>
  end

  rule literal
    (identifier / float / integer / string)
  end

  rule add
    "+" space? car:(expression / literal) space? cdr:(expression / literal) <Add>
  end

  rule integer
    ('+' / '-')? [0-9]+ <IntegerLiteral>
  end

  rule float
    ('+' / '-')? [0-9]+ (('.' [0-9]+) / ('e' [0-9]+)) <FloatLiteral>
  end

  rule string
    '"' ([^"\\] / "\\" . )* '"' <StringLiteral>
  end

  rule identifier
    [a-zA-Z\=\*] [a-zA-Z0-9_\=\*]* <Identifier>
  end

  rule space
    [\s]+
  end
end
